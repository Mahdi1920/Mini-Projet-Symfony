{% extends 'base.html.twig' %}
{% block title %}Reservation{% endblock %}
{% block body %}
    <style>
    h1{text-align: center;
        color: white;
        background-color: rgba(0, 0, 0, 0.1);
    }
        .image{ position: fixed;
                left: 0;
                right: 0;
                z-index: 1;
                display: block;
                background-image:url("../images/services3.jpg");
                background-size: cover;
                height: 750px ;
                background-color: rgba(0, 0, 0, 0.2);
                -webkit-filter: blur(3px);
                -moz-filter: blur(3px);
                -o-filter: blur(3px);
                -ms-filter: blur(3px);
                filter: blur(3px);
                }
        .contenu{
                position: fixed;
                left: 0;
                right: 0;
                z-index: 9999;
                margin-left: 20px;
                margin-right: 20px;
                font-weight: bolder;
                color: white;
                background-color: rgba(0, 0, 0, 0.1);
                }
    </style>
    <div class="image"></div>
    <div class="contenu">
        <h1>Reservation {{ reservation.dateR|date('m-d-Y H:i:s') }}</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Date_r</th>
                    <th>Etat</th>
                    <th>Id Client</th>
                    <th>Id Service</th>
                    <th>Actions</th>
                </tr>
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.dateR ? reservation.dateR|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ reservation.etat }}</td>
                    <td>{{ reservation.cli }}</td>
                    <td>{{ reservation.service }}</td>
                    <td>
                        <div class="btn-group btn-group-lg">
                            <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"><button class="btn btn-success btn-lg">Edit <i class="fas fa-edit"></i></button</a>
                            {{ include('reservation/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="{{ path('reservation_index') }}">
                <button class="btn btn-success btn-lg">back to list</button>
            </a>
        </div>
    </div>
    {% endblock %}
