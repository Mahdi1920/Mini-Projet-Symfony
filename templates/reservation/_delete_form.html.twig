<form method="post" action="{{ path('reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete are you sure to delete the reservation of the date {{ reservation.dateR|date('m-d-Y H:i:s') }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
    <button class="btn btn-danger btn-lg">Delete <i class="fa fa-trash-alt"></i></button>
</form>
